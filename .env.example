# Environment Variables
# Copy this file to .env.local and fill in your values

# General
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# OAuth Providers (optional - configure in Supabase Dashboard)
# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
NEXT_PUBLIC_GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Microsoft OAuth
NEXT_PUBLIC_MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Apple OAuth
NEXT_PUBLIC_APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# Email Service (Resend or Mailgun)
EMAIL_PROVIDER=resend
RESEND_API_KEY=
# or
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# Payment Integration (Stripe or PayPal)
PAYMENT_PROVIDER=stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# or
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=
ANALYTICS_API_KEY=

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_INSIGHTS=false
NEXT_PUBLIC_ENABLE_PAYMENT_INTEGRATION=false
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS=false

# Default Locale
NEXT_PUBLIC_DEFAULT_LOCALE=en
